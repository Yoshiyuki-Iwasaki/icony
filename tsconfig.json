{
    "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es2015",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true, // これを追加
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
    "es2016",
    "dom"
    ]
    },
    "include": [
    "resources/ts/**/*" // TypeScriptのソース配置場所
    ]
}
